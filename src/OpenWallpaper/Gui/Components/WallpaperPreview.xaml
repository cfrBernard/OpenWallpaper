<UserControl x:Class="OpenWallpaper.Gui.Components.WallpaperPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="320" Height="180">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Margin="4">
        <Grid Background="#333">
            <!-- Fake video thumbnail -->
            <Rectangle Fill="Black" RadiusX="8" RadiusY="8" />

            <!-- Overlay artist + name -->
            <StackPanel Background="#80000000" VerticalAlignment="Bottom">
                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="{Binding Artist}" Foreground="White" FontSize="12"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
